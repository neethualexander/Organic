<script>

	
// form validition
$(document).ready(function() {

  $('#signup-form').on('click', function(e) {
	  event.preventDefault();

    var name = $('#name').val();
    var email = $('#email').val();
    var password = $('#password').val();
    var confirmPassword = $('#confirm-password').val();

    if (name.trim() === '') {
      $('#name-valid').text('Name is required');
      return;
    }else if($.isNumeric(name)){
		$('#name-valid').text('Name should not be a number');
		return;
	}

    if (email.trim() === '') {
      $('#email-valid').text('Email is required');
      return;
    } else if (!isValidEmail(email)) {
      $('#email-valid').text('Invalid email format');
      return;
    }

    if (password.trim() === '') {
      $('#password-valid').text('Password is required');
      return;
    } else if (password.length < 6) {
      $('#password-valid').text('Password must be at least 6 characters');
      return;
    }

    if (confirmPassword.trim() === '') {
      $('#confirm-password-valid').text('Confirm Password is required');
      return;
    } else if (confirmPassword !== password) {
      $('#confirm-password-valid').text('Passwords do not match');
      return;
    }


     // Submit the form
	 $('#signup-form').off('click').trigger('submit');

  });

  // Other validation functions and form validation logic
});

// Function to check if an email is in a valid format
function isValidEmail(email) {
  var emailPattern = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
  return emailPattern.test(email);
}




</script>


    
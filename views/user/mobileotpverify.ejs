<%- include('../partials/header') %>

	<main class="main">
		<div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17"
			style="background-image: url('assets/images/demos/demo-4/slider/seafood.jpg')">
			<div class="container">
				<div class="form-box">
					<div class="form-tab">
						<ul class="nav nav-pills nav-fill" role="tablist">

							<li class="nav-item">
								<a class="nav-link active">Otp</a>
							</li>
						</ul>
						<div class="tab-content">
							<div class=" show active" id="register-2" role="tabpanel" aria-labelledby="register-tab-2">


								<form action="/mob-verify" method="post">
									<div class="form-group">
										<label for="register-email-2"> Otp</label>
										<input type="text" class="form-control" id="id_password" name="otp" required>
										<i class="far fa-eye" id="togglePassword"
											style="margin-left: 10px; cursor: pointer;"></i>


										<input type="hidden" class="form-control" value="<%=data%>" id="register"
											name="phone">
									</div><!-- End .form-group -->


									<div class="form-footer">
										<button type="submit" class="btn btn-outline-primary-2">
											<span>Verify</span>
											<i class="icon-long-arrow-right"></i>
										</button>


									</div><!-- End .form-footer -->
								</form>

							</div><!-- .End .tab-pane -->
						</div><!-- End .tab-content -->

					</div><!-- End .form-tab -->
				</div><!-- End .form-box -->
			</div><!-- End .container -->
		</div><!-- End .login-page section-bg -->
	</main><!-- End .main -->

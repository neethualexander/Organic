                            </div>
                            <div class="card-body">
                                <div class="input-upload">
                                    <% for(let i=0;i<4;i++){ %>
                                    <img src="/upload/<%= product.productImage[i]%>" alt="">
                                        <% } %>
                                    <input class="form-control" type="file" name="productImage" multiple>
                                </div>
                            </div>
                        </div>
                    </div>

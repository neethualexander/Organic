                                    <input placeholder="<%= product.productDesc %>" class="form-control" rows="4"
                                        name="productDes" name="productDescription"
                                        value="<%= product.productDes %>" required></input>
                                    <input type="hidden" class="form-control" name="id" id="floatingInputGrid"
                                        placeholder="Name" value="<%= product._id %>">
                                </div>
                            </div>
                        </div> <!-- card end// -->

